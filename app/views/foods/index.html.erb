<div class="page-header">
<h1>All of the Statuses</h1>
</div>

    <%= link_to "Post a New Status", new_food_path, class: "btn btn-success" %>

<% @foods.each do |food| %>

<div class="status">
<strong><%= food.name %></strong>
<p><%= food.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(food.created_at) + " ago", food %> 
   
    <span class="admin">
      | <%= link_to "Edit", edit_food_path(food) %> |
      <%= link_to "Delete", food, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
    </span>
     </div>
</div>

<% end %>
</div>

